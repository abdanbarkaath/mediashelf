generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  reviews Review[]
}

model Media {
  id         String    @id @default(cuid())
  title      String
  type       MediaType
  externalId String?   // e.g. TMDB / Open Library ID
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  reviews Review[]

  @@index([type])
  @@unique([type, externalId]) // avoid duplicates per provider/type
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  mediaId   String
  rating    Int
  content   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([mediaId])
}

enum MediaType {
  MOVIE
  BOOK
  SHOW
}
